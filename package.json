{
  "name": "mytgs-desktop-prototype",
  "version": "0.1.0",
  "description": "Desktop prototype for live myTGS period countdown",
  "author": "TGS",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test:fetch": "node src/test_fetch.js",
    "dist": "electron-builder --win msi"
  },
  "dependencies": {
    "playwright-core": "^1.55.0"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.tgs.mytgs-desktop-prototype",
    "productName": "myTGS Desktop",
    "copyright": "Copyright Â© 2024 TGS",
    "files": [
      "src/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/playwright-core/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false,
      "signExts": [
        "!msi",
        "!exe",
        "!dll"
      ]
    },
    "msi": {
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "toolsets": {
      "winCodeSign": "1.1.0"
    },
    "msiProjectCreated": "build/patch-msi-project.js"
  }
}
